#include <iostream> 
using namespace std; 
int main() { 
    int n, W; 
    cout << "Enter number of items: "; 
    cin >> n; 
    cout << "Enter capacity of knapsack: "; 
    cin >> W; 
    int value[20], weight[20]; 
    float ratio[20]; 
    cout << "Enter value and weight of each item:\n"; 
    for (int i = 0; i < n; i++) { 
        cin >> value[i] >> weight[i]; 
        ratio[i] = (float)value[i] / weight[i]; 
    } 
    // Sort items by value/weight ratio (descending) 
    for (int i = 0; i < n - 1; i++) { 
        for (int j = i + 1; j < n; j++) { 
            if (ratio[i] < ratio[j]) { 
                float temp = ratio[i];  // Swap ratios 
                ratio[i] = ratio[j]; 
                ratio[j] = temp; 
                int tempVal = value[i]; 
                value[i] = value[j]; 
                value[j] = tempVal; 
                int tempWt = weight[i];                  // Swap weights 
                weight[i] = weight[j]; 
                weight[j] = tempWt; 
            } 
        }   } 
    float totalValue = 0.0; 
    int remainingCapacity = W; 
    for (int i = 0; i < n; i++) { 
        if (weight[i] <= remainingCapacity) { 
               totalValue += value[i];                // Take the whole item 
            remainingCapacity -= weight[i]; 
        } else { 
            totalValue += ratio[i] * remainingCapacity; 
            break; 
        }    } 
    cout << "\nMaximum value in knapsack = " << totalValue << endl; 
    return 0; 
}
